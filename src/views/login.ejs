<%- include('includes/head.ejs')%>
  <%- include('includes/nav.ejs')%>
    <div class="container">
      <div class="row">
        <div class="col-lg-2"></div>

        <div class="col-lg-8 my-3">
          <h1 class="text-center">Criar conta ou entrar</h1>
          <p class="text-center lead">Crie sua conta ou faça seu login</p>

          <%- include('includes/messages.ejs') %>

            <div class="row">

              <div class="col-lg">
                <h4>Faça seu cadastro</h4>
                <form class="form-cadastro" action="/login/register" method="POST">
                  <input type="hidden" name="_csrf" value=<%=csrfToken %>>
                  <div class="form-group my-3">
                    <label>E-mail</label>
                    <input type="email" class="form-control cad-email" name="email" placeholder="Digite seu e-mail">
                  </div>
                  <div class="form-group my-3">
                    <label>Senha</label>
                    <input type="password" class="form-control cad-senha" name="password" placeholder="Digite sua senha">
                  </div>
                  <button type="submit" class="btn btn-primary my-3">Criar minha conta</button>
                </form>
              </div>

              <div class="col-lg">
                <h4>Faça seu login</h4>
                <form class="form-login" action="/login/login" method="POST">
                  <input type="hidden" name="_csrf" value=<%=csrfToken %>>
                  <div class="form-group my-3">
                    <label>E-mail</label>
                    <input type="email" class="form-control login-email" name="email" placeholder="Digite seu e-mail">
                  </div>
                  <div class="form-group my-3">
                    <label>Senha</label>
                    <input type="password" class="form-control login-senha" name="password" placeholder="Digite sua senha">
                  </div>
                  <button type="submit" class="btn btn-primary my-3">Entrar</button>
                </form>
              </div>

            </div>
        </div>

        <div class="col-lg-2"></div>
      </div>
    </div>

    <%- include('includes/footer.ejs')%>